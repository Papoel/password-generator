{% extends "layouts/base.html.twig" %}

{% block body %}
    <h1>Password Generator</h1>

    <form method="get" action="{{ path('app_generate_password') }}">
        <div class="">
            <label for="length">Length</label>
            <select name="length" id="length">
                {% for i in 8..50 %}
                    <option
                        value="{{ i }}"
                        {{ i== 16 ? 'selected' }}
                    >
                        {{ i }}
                    </option>
                {% endfor %}
            </select>
        </div>

        <div class="">
            <label for="uppercase_letters">Uppercase Letters</label>
            <input type="checkbox" id="uppercase_letters" name="uppercase_letters">
        </div>

        <div class="">
            <label for="characters_specials">Characters Specials</label>
            <input type="checkbox" id="characters_specials" name="characters_specials">
        </div>

        <div class="">
            <label for="digits">Digits</label>
            <input type="checkbox" id="digits" name="digits">
        </div>

        <button type="submit">Generate Password</button>

    </form>

    <footer>
        <p>Fait avec <span>&hearts;</span> par <strong>Papoel</strong></p>
        <p>{{ "now"|date("Y")  }} | Tous droits réservés.</p>
    </footer>
{% endblock %}
